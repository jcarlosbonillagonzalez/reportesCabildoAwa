<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReportesCabildoAwa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReportesCabildoAwa.styles.css" asp-append-version="true" />
</head>

@* colores  bg body-- bg-primary*@
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-dark bg-primary table-borderless box-shadow mb-3">

            <div class="container-fluid">
                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ReportesCabildoAwa</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                       @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ConsultaCertificado" asp-action="Consulta">Consulta</a>
                        </li>
                    </ul>
                   @*  <partial name="_LoginPartial" /> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- Barra final  -->

    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Footer Centered</title>
        <!-- Bootstrap CSS -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
        <style>
            /* Estilos personalizados para centrar el texto del footer */
            .footer-container {
                position: fixed;
                bottom: 0;
                left: 0;
                width: 100%;
                background-color: #f8f9fa;
                border-top: 1px solid #dee2e6;
                padding: 10px 0;
                text-align: center;
                color: #6c757d; /* Color gris para el texto */
            }

                .footer-container a {
                    text-decoration: none;
                    color: #007bff;
                }

                    .footer-container a:hover {
                        text-decoration: underline;
                    }

            .navbar {
                position: fixed; /* O absolute si se ajusta mejor a tu diseño */
                top: 0;
                left: 0;
                width: 100%;
                background-color: rgba(0, 0, 0, 0.8);
                .navbar-custom

            {
                background-color: #28a745; /* Color verde deseado */
            }
                color: white;
                padding: 10px;
                z-index: 2000; 
                display: flex;
                justify-content: center; /* Centra los elementos de la barra si es necesario */
            }

           


        </style>
    </head>
    <body>

       
        <div class="footer-container">
            &copy; <span id="year"></span> - Todos los Derechos Reservados Cabildo Indígena Awá 
        @*     <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>

        <!--Año actual  -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
        <script>
            
            document.getElementById('year').textContent = new Date().getFullYear();
        </script>
    </body>
</html>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
